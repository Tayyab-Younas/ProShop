{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerace application built with the MERN stack",
  "homepage": "https://github.com/Tayyab-Younas/ProShop#readme",
  "bugs": {
    "url": "https://github.com/Tayyab-Younas/ProShop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tayyab-Younas/ProShop.git"
  },
  "license": "MIT",
  "author": "Tayyab Younas",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "node backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "color": "^5.0.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.14.1",
    "multer": "^2.0.1",
    "react-router-bootstrap": "^0.26.3",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.10",
    "rxjs": "^7.8.2"
  }
}
